<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css" />
    <script src="/js/main.js" defer></script>
  </head>

  <body class="is-loading">
    <%
      // Beginner-style "React-ish" data lives here (hardcoded on purpose).
      const navLinks = [
        { label: "Home", href: "#home" },
        { label: "About", href: "#about" },
        { label: "Projects", href: "#projects" },
        { label: "Contact", href: "#contact" },
        { label: "Certificates", href: "/certificates" }
      ];

      const hero = {
        intro: "Hi, I'm Lionel",
        titleTop: "Creative Designer",
        titleBottom: "Developer",
        tagline: "I try to design clean and modern interfaces.",
        sub: "I'm still learning, so I keep things simple and hardcoded."
      };

      const certs = [
        {
          title: "CSS (Basic)",
          issuer: "HackerRank",
          date: "2026-01-26",
          file: "css certificate.pdf"
        },
        {
          title: "JavaScript (Basic)",
          issuer: "HackerRank",
          date: "2026-01-26",
          file: "javascript_basic certificate.pdf"
        },
        {
          title: "React (Basic)",
          issuer: "HackerRank",
          date: "2026-01-26",
          file: "react_basic certificate (1).pdf"
        },
        {
          title: "SQL (Basic)",
          issuer: "HackerRank",
          date: "2026-01-26",
          file: "sql_basic certificate.pdf"
        },
        {
          title: "ISTQB Foundation Cert Prep",
          issuer: "LinkedIn Learning",
          date: "2025-11-03",
          file: "CertificateOfCompletion_ISTQB Foundation Cert Prep.pdf"
        },
        {
          title: "Programming Foundations: Software Testing/QA",
          issuer: "LinkedIn Learning",
          date: "2025-11-17",
          file: "CertificateOfCompletion_Programming Foundations Software TestingQA.pdf"
        },
        {
          title: "Software Testing Foundations: Bug Writing and Management",
          issuer: "LinkedIn Learning",
          date: "2025-10-31",
          file: "CertificateOfCompletion_Software Testing Foundations Bug Writing and Management.pdf"
        },
        {
          title: "Software Testing Foundations: Test Planning",
          issuer: "LinkedIn Learning",
          date: "2025-11-03",
          file: "CertificateOfCompletion_Software Testing Foundations Test Planning.pdf"
        }
      ];

      const stats = [
        { value: String(certs.length), label: "Certificates" },
        { value: String(projectCount || 0), label: "Projects", id: "projectCount" },
        { value: "2", label: "Years" }
      ];

      const services = [
        {
          title: "UI / UX Design",
          desc: "Trying to make layouts clean and easy to use."
        },
        {
          title: "Web Development",
          desc: "Simple responsive pages with HTML, CSS, and JS."
        },
        {
          title: "Branding Touch",
          desc: "Basic colors, fonts, and small details that fit."
        }
      ];

      const socials = [
        {
          label: "LinkedIn",
          href: "https://www.linkedin.com/in/lionel-sem-b76a7a311/",
          img: "/img/linkedin.png"
        },
        {
          label: "GitHub",
          href: "https://github.com/Lionelsem",
          img: "/img/github.png"
        },
        {
          label: "Gmail",
          href: "mailto:Lionelsemwj@gmail.com",
          img: "/img/gmail.png"
        }
      ];

      const toPdf = (file) => "/pdf/" + encodeURIComponent(file);
    %>

    <div class="page-loader" id="pageLoader" role="status" aria-live="polite" aria-label="Loading">
      <div class="page-loader-content">
        <img src="/img/Logo.png" alt="Loading logo" class="page-loader-logo" />
        <div class="page-loader-bar" aria-hidden="true"></div>
      </div>
    </div>

    <!-- HEADER -->
    <header class="site-header">
      <div class="header-inner">
        <div class="logo">
          <a href="#home" aria-label="Go to home">
            <img src="/img/Logo.png" alt="Logo" class="logo-img" />
          </a>
        </div>

        <nav class="main-nav">
          <% navLinks.forEach((link) => { %>
            <a href="<%= link.href %>" <%= link.download ? "download" : "" %>>
              <%= link.label %>
            </a>
          <% }) %>
        </nav>
      </div>
    </header>

    <!-- HERO -->
    <section id="home" class="hero-section">
      <div class="container hero-content">
        <div class="hero-text">
          <p class="hero-intro"><%= hero.intro %></p>

          <h1>
            <%= hero.titleTop %> & <br />
            <%= hero.titleBottom %>
          </h1>

          <p class="hero-tagline"><%= hero.tagline %></p>
          <p class="hero-sub"><%= hero.sub %></p>

          <div class="hero-cta">
            <button class="btn primary-btn" onclick="scrollToSection('about')">
              View About Me
            </button>

            <a class="btn outline-btn" href="/pdf/Lionel-Resume..docx" download>
              Resume
            </a>
          </div>

          <div class="hero-stats">
            <% stats.forEach((stat) => { %>
              <div class="stat">
                <p class="stat-value">
                  <span<%= stat.id ? ` id="${stat.id}"` : "" %>><%= stat.value %></span>
                </p>
                <p class="stat-label"><%= stat.label %></p>
              </div>
            <% }) %>
          </div>
        </div>

        <div class="hero-image">
          <div class="hero-image-card">
            <img src="/img/Lionel.jpg" alt="Lionel portrait" />
          </div>
        </div>
      </div>
    </section>

    <div class="section-divider">
      <span class="divider-line"></span>
      <span class="divider-dot"></span>
      <span class="divider-line"></span>
    </div>

    <!-- ABOUT -->
    <section id="about" class="section about-section swirl-bg">
      <div class="container">
        <div class="about-header">
          <h2 class="about-title">About me</h2>
          <p class="about-caption">
            Hi, I am Lionel Sem and I am 21 years old this year.
          </p>
        </div>

        <div class="about-layout">
          <div class="about-image">
            <img src="/img/AboutMe.png" alt="Lionel" />
          </div>

          <div class="about-text">
            <p>
              I am a web developer who is still learning and practicing a lot.
              I use HTML, CSS, JavaScript, and a bit of Python. I like making
              clean layouts and simple features that work.
            </p>
          </div>
        </div>

        <div class="about-certifications">
          <h3 class="section-title">Certifications</h3>
          <p class="section-subtitle">Some are shown here and the rest are in the certificates page.</p>

          <div class="cert-carousel" aria-label="Certificates carousel">
            <button class="cert-nav cert-prev" type="button" aria-label="Previous certificates">
              &#8249;
            </button>

            <div class="cert-track" id="certTrack">
              <% certs.forEach((cert) => { %>
                <article class="cert-card">
                  <div class="cert-preview">
                    <iframe
                      src="<%= toPdf(cert.file) %>#page=1&view=FitH"
                      title="<%= cert.title %> preview"
                      loading="lazy">
                    </iframe>
                  </div>
                  <div class="cert-body">
                    <h4 class="cert-title"><%= cert.title %></h4>
                    <p class="cert-meta"><%= cert.issuer %> - <%= cert.date %></p>
                    <div class="cert-actions">
                      <a class="btn outline-btn" href="<%= toPdf(cert.file) %>" target="_blank" rel="noopener">
                        Open PDF
                      </a>
                    </div>
                  </div>
                </article>
              <% }) %>
            </div>

            <button class="cert-nav cert-next" type="button" aria-label="Next certificates">
              &#8250;
            </button>
          </div>

          <a class="btn primary-btn" href="/certificates">View all certificates</a>
        </div>
      </div>
    </section>

    <div class="section-divider">
      <span class="divider-line"></span>
      <span class="divider-dot"></span>
      <span class="divider-line"></span>
    </div>

    <!-- SERVICES -->
    <section id="services" class="section services-section">
      <div class="container">
        <h2 class="section-title">Services</h2>
        <p class="section-subtitle">Simple things I can build right now.</p>

        <div class="services-grid">
          <% services.forEach((service) => { %>
            <article class="service-card">
              <h3><span class="service-emoji">* </span><%= service.title %></h3>
              <p><%= service.desc %></p>
            </article>
          <% }) %>
        </div>
      </div>
    </section>

    <div class="section-divider">
      <span class="divider-line"></span>
      <span class="divider-dot"></span>
      <span class="divider-line"></span>
    </div>

    <!-- PROJECTS -->
    <section id="projects" class="section project-section">
      <div class="container">
        <h2 class="section-title">Projects</h2>
        <p class="section-subtitle">These are my projects (still adding more).</p>

        <div class="project-filters" id="projectFilters" role="tablist" aria-label="Project categories">
          <!-- Filters injected by JS -->
        </div>

        <div class="projects-grid" id="projectsGrid">
          <!-- Cards injected by JS -->
        </div>
      </div>

      <!-- Modal -->
      <div class="proj-modal" id="projectModal" aria-hidden="true">
        <div class="proj-modal-backdrop" data-close-modal></div>

        <div class="proj-modal-dialog" role="dialog" aria-modal="true" aria-labelledby="projModalTitle">
          <button class="proj-modal-close" type="button" data-close-modal aria-label="Close">
            &#10005;
          </button>

          <h3 class="proj-modal-title" id="projModalTitle">Project title</h3>
          <div class="proj-modal-media" id="projModalMedia"></div>
          <p class="proj-modal-body" id="projModalBody">Project details...</p>
          <div class="proj-modal-writeup" id="projModalWriteup"></div>
          <div class="proj-modal-actions">
            <a class="btn primary-btn" id="projModalLink" href="#" target="_blank" rel="noopener">
              Open Project
            </a>
          </div>
        </div>
      </div>
    </section>

    <div class="section-divider">
      <span class="divider-line"></span>
      <span class="divider-dot"></span>
      <span class="divider-line"></span>
    </div>

    <!-- CONTACT -->
    <section id="contact" class="section contact-section">
      <div class="container">
        <h2 class="section-title">Contact</h2>
      </div>
      <div class="contact-layout unified-contact">
        <div class="contact-panel">
          <form class="contact-form" onsubmit="return false;">
            <div class="form-group">
              <label>Name</label>
              <input type="text" placeholder="Your name" />
            </div>

            <div class="form-group">
              <label>Email</label>
              <input type="email" placeholder="Your email" />
            </div>

            <div class="form-group">
              <label>Message</label>
              <textarea rows="6" placeholder="Your message"></textarea>
            </div>

            <button class="btn primary-btn" type="button">Send</button>
          </form>
        </div>

        <aside class="contact-panel contact-details">
          <h3>Details</h3>

          <div class="detail-block">
            <p class="detail-label">Email</p>
            <p class="detail-value">24045619@myrp.edu.sg</p>
          </div>

          <div class="detail-block">
            <p class="detail-label">Location</p>
            <p class="detail-value">Singapore</p>
          </div>

          <div class="detail-block">
            <p class="detail-label">Socials</p>
            <div class="contact-socials">
              <% socials.forEach((social) => { %>
                <a class="contact-social-link" href="<%= social.href %>" target="_blank" rel="noopener">
                  <span class="contact-social-icon" aria-hidden="true">
                    <img src="<%= social.img %>" alt="" />
                  </span>
                  <span><%= social.label %></span>
                </a>
              <% }) %>
            </div>
          </div>

          <a class="btn outline-btn contact-resume" href="/pdf/Lionel-Resume..docx" download>
            View Resume
          </a>
        </aside>
      </div>
    </section>

    <!-- FOOTER -->
    <footer class="site-footer">
      <div class="container">
        <p>&copy; <%= new Date().getFullYear() %> Lionel</p>
      </div>
    </footer>

    <button class="chat-fab" id="chatFab" type="button" aria-label="Open live chat">
      Chat
    </button>

    <div class="floating-chat" id="floatingChat" aria-hidden="true">
      <div class="floating-chat-header">
        <div>
          <h4>Live Q&amp;A</h4>
          <p>Ask me about my work</p>
        </div>
        <button class="chat-close" id="chatClose" type="button" aria-label="Close live chat">
          &#10005;
        </button>
      </div>
      <div class="chat-messages" id="chatMessages" aria-live="polite"></div>
      <form class="chat-input" id="chatForm" autocomplete="off">
        <input
          type="text"
          id="chatInput"
          placeholder="Ask a question..."
          maxlength="120"
        />
        <button type="submit">Send</button>
      </form>
    </div>
  </body>
</html>
